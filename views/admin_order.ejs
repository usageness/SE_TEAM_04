        <% for(var i=0; i<logs.length; i++) {%>
          <tr id = "<%=logs[i].logId%>">
            <td scope="row"><%=logs[i].logId%></td>
            <% d = new Date(logs[i].date)%>
            <td><%=d.getFullYear() + '/' + ((((d.getMonth()+1) - 9) > 0) ? '' + (d.getMonth()+1):'0' +  (d.getMonth()+1)) + '/' +(((d.getDate() - 9) > 0) ? '' + d.getDate():'0' +  d.getDate()); %></td>
            <% if(logs[i].dataValues.productsCount == 1){%>
            <td><%= logs[i].purchase.title %></td>
            <% }else{%>
            <td><%= logs[i].purchase.title + ' 외 ' + (parseInt(logs[i].dataValues.productsCount) - 1) %></td>
            <% }%>

            <% if(logs[i].status == 1){%>
            <td class="status">결제 완료</td>
            <% }else if(logs[i].status == 2) {%>
            <td class="status">배송 중</td>
            <% }else if(logs[i].status == 3) {%>
            <td class="status">배송 완료</td>
            <% }else if(logs[i].status == 4) {%>
            <td class="status">구매 확정</td>
            <% }%>
            <td><%= logs[i].dataValues.amountAll + '원' %></td>
            <% if(logs[i].status == 1){%>
            <td><button class="btn btn-outline-primary start-delivery">배송 시작</button></td>
            <% }else if(logs[i].status == 2) {%>
            <td><button class="btn btn-outline-primary finish-delivery">배송 완료</button></td>
            <% }else if(logs[i].status == 3) {%>
            <td><button class="btn btn-outline-secondery wait-confirm" disabled=true >구매 확정 대기</button></td>
            <% }else if(logs[i].status == 4) {%>
            <td><button class="btn btn-outline-secondery finish-confirm" disabled=true >구매 완료</button></td>
            <% }%>
            
          </tr>
        <% } %>
      </tbody>
    </table>
