<main class="container">
  <form id="form" action='/admin/item/<%= item.id %>' method="POST">
    <h1 class="mb-5 text-center">상품 상세정보</h1>
  
    <!-- Text input -->
    <div class="form-outline mb-4">
      <input type="text" id="formname" class="form-control" name="name" disabled=true value="<%= item.title %>"/>
      <label class="form-label" for="formname">보드게임 이름</label>
    </div>
  
    <!-- Text input -->
    <div class="form-outline mb-4">
      <input type="number" id="formprice" class="form-control" name="price" disabled=true value="<%= item.price %>"/>
      <label class="form-label" for="formprice">보드게임 가격</label>
    </div>

    <!-- Text input -->
    <div class="form-outline mb-4">
      <input type="number" id="formDeliverFee" class="form-control" name="deliveryFee" disabled=true value="<%= item.deliveryFee %>"/>
      <label class="form-label" for="form6Example4">배송비 가격</label>
    </div>
  
    <!-- Email input -->
    <div class="form-outline mb-4">
      <input type="text" id="formcreator" class="form-control" name="creator" disabled=true value="<%= item.designer %>"/>
      <label class="form-label" for="formcreator">제작사</label>
    </div>
    
    <div class="row mb-4">
      <!-- Number input -->
      <div class="col">
        <div class="form-outline mb-4">
          <input type="number" id="formpeoplemin" class="form-control" name="peopleMin" disabled=true value="<%= item.playersMin %>"/>
          <label class="form-label" for="formpeoplemin">최소 인원</label>
        </div>
      </div>
      <!-- Number input -->
      <div class="col">
        <div class="form-outline mb-4">
          <input type="number" id="formpeoplemax" class="form-control" name="peopleMax" disabled=true value="<%= item.playersMax %>"/>
          <label class="form-label" for="formpeoplemax">최대 인원</label>
        </div>
      </div>
    </div>
    <div class="form-outline mb-4">
      <img class="fit-picture"
      src="/image/<%=item.imageurl %>"
      alt="ImageNotFounded">
      <input type="file" class="form-control" id="formMainImage" accept="image/*" disabled=true name="mainImage" >
      <label class="form-label" for="formMainImage">메인 이미지</label>
    </div>

    <div class="form-outline mb-4">
      <% for(var i=0; i<item.ProductImages.length; i++) {%>
        <img class="fit-picture"
        src="/image/<%=item.ProductImages[i].fileName %>"
        alt="ImageNotFounded">
        <div class="btn btn-outline-primary subImageDeleteBtn" id="deleteSubImage_<%= item.ProductImages[i].id %>" disabled=true onclick="DeleteSubImage('deleteSubImage_<%= item.ProductImages[i].id %>', <%= item.ProductImages[i].id %>)"> x </div>
        <br>
      <% } %>
      <input type="file" class="form-control" id="formSubImage" accept="image/*" disabled=true name="subImage"  multiple >
      <label class="form-label" for="formSubImage">설명 이미지</label>
    </div>
    <div class="btn-group btn-group-toggle" id="divradio" data-toggle="buttons">
      <% for(var i=0; i<category.length; i++) {%>
       
        <label class="btn btn-outline-primary">
          <% if(category[i].id == item.categoryinId)  {%>
          <input type="radio" name="btnradio" id="btnradio<%= i %>" disabled=true  checked><%= category[i].name %></input>
          <% }else {%>
          <input type="radio" name="btnradio" id="btnradio<%= i %>" disabled=true  ><%= category[i].name %></input>
          <% } %>

          
        </label>
      <% } %>
    </div>
  
    <!-- Message input -->
    <div class="form-outline mb-4">
      <textarea class="form-control" id="formdescription" rows="4" disabled=true name="description"><%= item.content %></textarea>
      <label class="form-label" for="formdescription">상세 설명</label>
    </div>
  

  </form>
  
  
    <!-- Submit button -->
    <div>
      <a  class="btn btn-secondary mb-4 float-right ml-2" href="/admin/item">취소하기</a>
      <button id="delete-item" type="button" class="btn btn-danger mb-4 float-right ml-2">삭제하기</button>
      <button id="update-item" type="button" class="btn btn-primary mb-4 float-right">수정하기</button>
    </div>
    
</main>

    <script src="../assets/dist/js/bootstrap.bundle.min.js"></script>

