<main class="container">
  <form id="form" >
    <h1 class="mb-5 text-center">새 쿠폰 등록하기</h1>
    <%if(coupon.type == 1){%>
    <div class="btn-group btn-group-toggle" id="typedivradio" data-toggle="buttons">
      <label class="btn btn-outline-primary">
        <input type="radio" class="type" name="typebtnradio" id="typebtnradio1" disabled=true checked>[최소 가격] 이상 구매시, [할인 가격] 할인</input>
      </label>
      <label class="btn btn-outline-primary">
        <input type="radio" class="type" name="typebtnradio" id="typebtnradio2" disabled=true>[카테고리] 상품 구매시, [할인율] 할인, 최대 [최대 할인 가격]</input>
      </label>
    </div>
    <%}else{%>
    <div class="btn-group btn-group-toggle" id="typedivradio" data-toggle="buttons">
      <label class="btn btn-outline-primary">
        <input type="radio" class="type" name="typebtnradio" id="typebtnradio1" disabled=true>[최소 가격] 이상 구매시, [할인 가격] 할인</input>
      </label>
      <label class="btn btn-outline-primary">
        <input type="radio" class="type" name="typebtnradio" id="typebtnradio2" disabled=true checked>[카테고리] 상품 구매시, [할인율] 할인, 최대 [최대 할인 가격]</input>
      </label>
    </div>
    <%}%>

    <br>

    쿠폰타입
    <br>
    <br>
    
    <!-- Text input -->
    <div class="form-outline mb-4">
      <input type="text" id="name" class="form-control" name="name" value="<%=coupon.name%>" disabled=true/>
      <label class="form-label" for="name">쿠폰 이름</label>
    </div>

    <!-- Text input -->
    <div class="form-outline mb-4">
      <input type="text" id="code" class="form-control" name="code" value="<%=coupon.code%>" disabled=true/>
      <label class="form-label" for="code">쿠폰 코드</label>
    </div>
  
    <!-- Text input -->
    <div class="form-outline mb-4">
      <input type="number" id="minPrice" class="form-control" name="minPrice" value="<%=coupon.minPrice%>" disabled=true/>
      <label class="form-label" for="minPrice">쿠폰 적용 최소 가격</label>
    </div>

    <!-- Text input -->
    <div class="form-outline mb-4">
      <input type="number" id="discountStatic" class="form-control" name="discountStatic" value="<%=coupon.discountStatic%>" disabled=true/>
      <label class="form-label" for="discountStatic">할인 금액</label>
    </div>

    <!-- Text input -->
    <div class="form-outline mb-4">
      <input type="number" id="discountPercent" class="form-control" name="discountPercent" value="<%=coupon.discountPercent%>" disabled=true/>
      <label class="form-label" for="discountPercent">할인율</label>
    </div>

    <!-- Text input -->
    <div class="form-outline mb-4">
      <input type="number" id="maxDiscount" class="form-control" name="maxDiscount" value="<%=coupon.maxDiscount%>" disabled=true/>
      <label class="form-label" for="maxDiscount">최대 할인 금액(할인 한도)</label>
    </div>
  
    
    <div class="btn-group btn-group-toggle" id="divradio" data-toggle="buttons">
      <% for(var i=0; i<category.length; i++) {%>
       
        <label class="btn btn-outline-primary">
          <%if(category[i].id == coupon.CategoryId){%>            
          <input type="radio" class="category" name="btnradio" id="btnradio<%= i %>" checked disabled=true><%= category[i].name %></input>
          <%}else{%>
          <input type="radio" class="category" name="btnradio" id="btnradio<%= i %>" disabled=true><%= category[i].name %></input>
          <%}%>
        </label>
      <% } %>
    </div>
    <br>
    <label class="form-label" for="divradio">카테고리</label>

    <!-- Message input -->
    <div class="form-outline mb-4">
      <textarea class="form-control" id="content" rows="4" name="content"  disabled=true><%=coupon.content%></textarea>
      <label class="form-label" for="content">설명</label>
    </div>
  </form>
  <div>
    <a  class="btn btn-secondary mb-4 float-right ml-2" href="/admin/coupon">취소하기</a>
    <button id="delete-coupon" type="button" class="btn btn-danger mb-4 float-right ml-2">삭제하기</button>
    <button id="update-coupon" type="button" class="btn btn-primary mb-4 float-right">수정하기</button>
  </div>
