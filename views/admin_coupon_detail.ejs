    <script src="../assets/dist/js/bootstrap.bundle.min.js"></script>

    <script src="sidebars.js"></script>
    <script>
      async function readFileAsDataURL(file) {
        let result_base64 = await new Promise((resolve) => {
            let fileReader = new FileReader();
            fileReader.onload = (e) => resolve(fileReader.result);
            fileReader.readAsDataURL(file);
        });

        // console.log(result_base64); // aGV5IHRoZXJl...

        return result_base64;
      }
      $("#typedivradio").on("change", (e) => {
        if(e.target.id == 'typebtnradio1'){
          $("#minPrice").attr("disabled", false)
          $("#discountStatic").attr("disabled", false)
          $("#discountPercent").attr("disabled", true)
          $("#maxDiscount").attr("disabled", true)
          $(".category").attr("disabled", true)
        }else{
          $("#minPrice").attr("disabled", true)
          $("#discountStatic").attr("disabled", true)
          $("#discountPercent").attr("disabled", false)
          $("#maxDiscount").attr("disabled", false)
          $(".category").attr("disabled", false)
        }
      })
      $("#delete-coupon").on("click", () => {
        if(!confirm('정말 삭제하시겠습니까?')) return;

        $.ajax({
          url: '/admin/coupon/<%=coupon.id%>',
          type: 'DELETE',
          success: function(){
            alert("삭제했습니다.");
            console.log('form submitted.');
            window.location.href = '/admin/coupon';
          },
          error: function(){
            alert("삭제 실패했습니다.");
            console.log('실패');
          }
        });
      });

      $("#update-coupon").on("click", async () => {
        // e.preventDefault();
        // console.log(1)
        if($("#update-coupon").text() == "수정하기"){
          $("#update-coupon").text("수정 완료")
          $(".type").attr("disabled", false)
          $("#name").attr("disabled", false)
          $("#code").attr("disabled", false)
          $("#content").attr("disabled", false)

          if($(".type:checked")[0].id == 'typebtnradio1'){
            $("#minPrice").attr("disabled", false)
            $("#discountStatic").attr("disabled", false)
            $("#discountPercent").attr("disabled", true)
            $("#maxDiscount").attr("disabled", true)
            $(".category").attr("disabled", true)
          }else{
            $("#minPrice").attr("disabled", true)
            $("#discountStatic").attr("disabled", true)
            $("#discountPercent").attr("disabled", false)
            $("#maxDiscount").attr("disabled", false)
            $(".category").attr("disabled", false)
          }
        }else{
          var formData = new FormData($("#form")[0])
          // console.log(formData.get('btnradio'))
          // console.log($('#divradio>.active').text().trim())


          if(formData.get('name') == "" ){
            alert('쿠폰 이름은 필수 입력사항입니다.');
            return;
          }
          if(formData.get('code') == "" ){
            alert('쿠폰 코드는 필수 입력사항입니다.');
            return;
          }
          if(formData.get('content').length < 10 ){
            alert('설명 10글자 이상 등록해야합니다.');
            return;
          }
          if($(".type:checked")[0].id == "typebtnradio1"){
            if(formData.get('minPrice') == "" ){
              alert('현재 쿠폰 타입에서는 쿠폰 적용 최소 금액은 필수 입력사항입니다.');
              return;
            }
            if(formData.get('discountStatic') == "" ){
              alert('현재 쿠폰 타입에서는 할인 금액은 필수 입력사항입니다.');
              return;
            }
            if(formData.get('minPrice') % 1000 != 0 ){
              alert('쿠폰 적용 최소 금액은 1000원 단위로 등록해야합니다.');
              return;
            }
            if(formData.get('discountStatic') % 500 != 0 ){
              alert('할인 금액은 500원 단위로 등록해야합니다.');
              return;
            }
          }else{
            if(formData.get('discountPercent') == "" ){
              alert('현재 쿠폰 타입에서는 할인율은 필수 입력사항입니다.');
              return;
            }
            if(formData.get('maxDiscount') == "" ){
              alert('현재 쿠폰 타입에서는 할인 금액은 필수 입력사항입니다.');
              return;
            }
            if(formData.get('discountPercent')  <= 0 && formData.get('discountPercent')  > 100 ){
              alert('쿠폰 할인율은 0보다 크고 100보다 작아야합니다.');
              return;
            }
            if(formData.get('maxDiscount') % 1000 != 0 ){
              alert('최대 할인 금액은 1000원 단위로 등록해야합니다.');
              return;
            }

          }
          formData.delete('btnradio')
          formData.append('category', $('#divradio>.active').text().trim());
          formData.delete('typedivradio')
          formData.append('type', ($('#divradio>.active').id == 'typebtnradio1') ? 1 : 2);

          
          $.ajax({
            url: '/admin/coupon/<%=coupon.id%>',
            method: 'POST',
            data : Object.fromEntries(formData),
            success: function(){
              alert("등록했습니다.");
              console.log('form submitted.');
              window.location.href = '/admin/coupon/<%=coupon.id%>';
            },
            error: function(){
              alert("등록 실패했습니다.");
              console.log('실패');
            }
          });
        }
      });
    </script>
