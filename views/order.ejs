<div class="container">
  <h1 class="mb-5 text-center">주문 관리</h1>
  <table border="0" cellspacing="5" cellpadding="5">
    <div class="btn-toolbar mb-2 mb-md-0">
      <div class='col-md-3 mr-5 col-xs-4'>
        <div class="form-group">
          <div class="input-group date" id="datetimepicker1" data-target-input="nearest">

            <input type="text" id="minDate" class="form-control datetimepicker-input" data-target="#datetimepicker1" value="<%= dateMin%>">
            <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
              <div class="input-group-text">
                <i class="fa fa-calendar">

                </i>
              </div>
            </div>
          </div>
        </div>
      </div>
      ~
      <div class='col-md-3 ml-5 col-xs-4'>
        <div class="form-group">
          <div class="input-group date" id="datetimepicker2" data-target-input="nearest">
            <input type="text" id="maxDate"class="form-control datetimepicker-input" data-target="#datetimepicker2" value="<%= dateMax%>">
            <div class="input-group-append" data-target="#datetimepicker2" data-toggle="datetimepicker">
              <div class="input-group-text">
                <i class="fa fa-calendar">

                </i>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </table>
  <div class="my-3 p-3 pb-5 bg-body rounded shadow-sm">
    <table id="table" class="table" sortable="checked">
      <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">주문 일자</th>
        <th scope="col">상품명</th>
        <th scope="col">상태</th>
        <th scope="col">총 가격</th>
        <th scope="col">배송지</th>
        <th scope="col">버튼</th>
      </tr>
      </thead>
      <tbody>
      <% for(var i=0; i<logs.length; i++) {%>
      <tr id = "<%=logs[i].logId%>">
        <td scope="row"><%=logs[i].logId%></td>
        <% d = new Date(logs[i].date)%>
        <td><%=d.getFullYear() + '/' + ((((d.getMonth()+1) - 9) > 0) ? '' + (d.getMonth()+1):'0' +  (d.getMonth()+1)) + '/' +(((d.getDate() - 9) > 0) ? '' + d.getDate():'0' +  d.getDate()); %></td>
        <% if(logs[i].dataValues.productsCount == 1){%>
          <td><%= logs[i].purchase.title %></td>
        <% }else{%>
          <td><%= logs[i].purchase.title + ' 외 ' + (parseInt(logs[i].dataValues.productsCount) - 1) %></td>
        <% }%>

        <% if(logs[i].status == 1){%>
          <td class="status">결제 완료</td>
        <% }else if(logs[i].status == 2) {%>
          <td class="status">배송 중</td>
        <% }else if(logs[i].status == 3) {%>
          <td class="status">배송 완료</td>
        <% }else if(logs[i].status == 4) {%>
          <td class="status">구매 확정</td>
        <% }%>
        <td><%= logs[i].dataValues.amountAll + '원' %></td>
        <td><% if(logs[i].destination) { %>
          <%= logs[i].destination.address+","+logs[i].destination.detailesAddress %>
        <% } else { %>
        -
      <% } %></td>
        <% if(logs[i].status == 1){%>
          <td><a href="/qna/<%=logs[i].logId%>"><button class="btn btn-outline-primary inquiry">문의하기</button></a></td>
        <% }else if(logs[i].status == 2) {%>
          <td><a href="/qna/<%=logs[i].logId%>"><button class="btn btn-outline-primary inquiry">문의하기</button></a></td>
        <% }else if(logs[i].status == 3) {%>
          <td><button class="btn btn-outline-primary purchase-confirm" >구매 확정</button></td>
        <% }else if(logs[i].status == 4) {%>
          <td><a class="btn btn-outline-primary review" href="/product/<%=logs[i].productId%>">상품평</a></td>
        <% }%>

      </tr>
      <% } %>
      </tbody>
    </table>
  </div>
</div>

