<script>

  $('.inquiry').on('click', (e) => {
    $.ajax({
      url: '/qna',
      type: 'PUT',
      success: function(){
        console.log('form submitted.');
        window.location.href = '/qna'

      },
      error: function(){
        
      }
    })

  })
  $('.purchase-confirm').on('click', (e) => {
    var el = e.target.parentElement.parentElement
    var formData = new FormData();
    formData.append('logId', el.id);
    formData.append('currentStatus', 3);
    formData.append('targetStatus', 4);

    $.ajax({
      url: '/order',
      type: 'PUT',
      data : Object.fromEntries(formData),
      success: function(){
        alert("구매 확정했습니다.");
        console.log('form submitted.');
        window.location.href = '/order'

      },
      error: function(){
        alert("구매 확정 실패했습니다.");
        console.log('실패');
      }
    });
  })

  $(document).ready(function(){
    var table = $('#table').DataTable();

    $('#datetimepicker1').datetimepicker({ format: 'L'});
    $('#datetimepicker2').datetimepicker({ format: 'L', useCurrent: false });
    $("#datetimepicker1").on("change.datetimepicker", async function (e) {
      $('#datetimepicker2').datetimepicker('minDate', e.date);

      table.draw();
    });
    $("#datetimepicker2").on("change.datetimepicker", function (e) {
      $('#datetimepicker1').datetimepicker('maxDate', e.date);
      table.draw();

    });


    $.fn.dataTable.ext.search.push(
            function( settings, data, dataIndex ) {
              var min = $('#minDate').val();
              var max = $('#maxDate').val();
              // console.log(min)
              // console.log(max)
              min = min.slice(6, 10) + '/' + min.slice(0, 5)
              max = max.slice(6, 10) + '/' + max.slice(0, 5)
              var date = data[1]|| 0; // use data for the age column
              console.log(date + '  ' + min  + '  ' + max)
              console.log(date >= min)
              // console.log(min)
              // console.log(max)
              if ( ( !min.match('[0-9]{4}\/[0-9]{2}\/[0-9]{2}').length && !max.match('[0-9]{4}\/[0-9]{2}\/[0-9]{2}').length ) ||
                      ( !min.match('[0-9]{4}\/[0-9]{2}\/[0-9]{2}').length && date <= max ) ||
                      ( min <= date  && !max.match('[0-9]{4}\/[0-9]{2}\/[0-9]{2}').length ) ||
                      ( min <= date  && date <= max ) )
              {
                return true;
              }
              return false;
            }
    );


  });
</script>
